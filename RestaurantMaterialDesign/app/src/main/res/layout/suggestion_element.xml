<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/section_margin_vertical"
    android:layout_marginTop="@dimen/section_margin_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/suggestionElementImage"
                android:scaleType="centerCrop"
                android:src="@drawable/suggestion_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5km"
                android:padding="1dp"
                android:id="@+id/suggestionRatingText"
                android:layout_gravity="right|top"
                android:background="@color/ratingBackground"
                android:textColor="#ffffff" />
        </FrameLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/suggestionElementName"
            android:layout_weight="2"
            android:text="Suggestion Name"
            android:textSize="@dimen/text_size_large"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/corner_radius"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/suggestionElementDescription1"
            android:textSize="@dimen/text_size_small"
            android:text="Suggestio Description 1"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/corner_radius"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small"
            android:id="@+id/suggestionElementDescription2"
            android:text="Suggestion Description 2"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/corner_radius"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>