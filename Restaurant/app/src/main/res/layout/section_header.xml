<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurant to go eat at"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:gravity="bottom"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dine-out restaurants"
        android:id="@+id/categoryNameText"
        android:layout_below="@+id/titleText"
        android:layout_alignStart="@+id/titleText"
        android:layout_alignEnd="@+id/titleText" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/categoryNameText"
        android:layout_toEndOf="@+id/titleText"
        android:layout_alignTop="@+id/titleText"
        android:src="@drawable/section_header"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="#ffffff" />

</RelativeLayout>